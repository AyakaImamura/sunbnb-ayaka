                                <%= f.text_area :description, placeholder: "Description", rows:5, class: "w-100 p-2 mb-3 form-control" %>
                            </div>

                            <div class="field">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "w-100 p-2 mb-3 form-control" %>
                            </div>

                            <div class="field">
                                <%= f.password_field :password, autocomplete: "new-password",placeholder:"New Password (â€»leave blank if you don't want to change it)",class: "w-100 p-2 form-control" %>

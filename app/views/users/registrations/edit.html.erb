<div class="container">
    <div class="row">
        <div class="col-4 p-4">
            <section>
                <div class="card">
                    <div class="card-header text-center card-header">
                        Edit Profile
                    </div>
                    <div class="card-body text-center">

                        <%= link_to "view profile", user_path(current_user), class:"btn btn-info btn-block"%>
                        
                    </div>
                </div>
            </section>
        </div>

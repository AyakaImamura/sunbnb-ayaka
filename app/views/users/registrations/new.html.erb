<div class="container">
    <div class="col-sm-12 col-md-6 mx-auto">
        <h2 class=" text-center">Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/devise_messages" %>

        <div class="field">
            <%= f.text_field :name, placeholder: "Full Name",class: "w-100 p-2 mb-3" %>
        </div>

        <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com",class: "w-100 p-2 mb-3" %>
        </div>

        <div class="field">
            <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password",class: "w-100 p-2 mb-1" %>
            <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> characters minimum)</small>
            <% end %><br />
        </div>

        <div class="field">
            <%#= f.label :password_confirmation %><%#br /%>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Password confirmation",class: "w-100 p-2 mb-3" %>
        </div>

        <div class="actions">
            <br>
            <%= f.submit "Sign up", class:"btn signupbtn btn-block p-2" %>
        </div>
        <% end %>
        <%#= render "users/shared/links", class:"btn btn-primary w-100"  #元あったやつ。これ自体編集できるの？%>
        <%= link_to "sign up with facebook", user_facebook_omniauth_authorize_path,class:"btn btn-primary btn-block mt-3 p-2"%>
    </div>
</div>
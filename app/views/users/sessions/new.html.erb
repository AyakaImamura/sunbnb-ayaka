<div class="container">
    <div class="col-sm-12 col-md-6 mx-auto">
        <h2 class=" text-center mb-5">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com",class: "w-100 p-2 mb-3" %>
        </div>

        <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",class: "w-100 p-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field mb-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="actions">
            <%= f.submit "Log in",class:"btn signupbtn btn-block p-2" %>
        </div>
        <hr>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
</div>
<div class="row">
    <% if @photos %>
        <% @photos.each do |photo| %>
            <div class="col-4">
                <div class="card">
                    <%= image_tag photo.image.url,class:"card-img-top" %>
                    <div class="card-body">
                        <p class="card-text float-right">
                            <i class="fas fa-trash-alt"></i>
                        </p>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>    
</div>

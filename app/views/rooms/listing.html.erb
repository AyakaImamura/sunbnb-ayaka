<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "rooms/sidebar" %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Listing</h4>
                </div>

                <div class="card-body">
                    <%= form_for @room do |f| %>
                        <div class="row">
                            <div class="col-4 select mb-3">
                                <%= f.label :home_type %><br>
                                <%= f.select :home_type, [["Apartment","Apartment"],["House","House"],["condo", "condo"]],prompt:"Select...",class:"" %>
                            </div>
                            <div class="col-4 select mb-3">
                                <%= f.label :room_type %><br>
                                <%= f.select :room_type, [["Entire","Entire"],["Private","Private"],["Shared", "Shared"]],prompt:"Select...",class:"" %>
                            </div>
                            <div class="col-4 select mb-3">
                                <%= f.label :guest_count %><br>
                                <%= f.select :guest_count, [["1",1],["2",2],["3", 3],["4", 4]],prompt:"Select...",class:"" %>
                            </div>
                            <div class="col-4 select mb-3">
                                <%= f.label :bedrooms %><br>
                                <%= f.select :bedrooms_count, [["1",1],["2",2],["3", 3],["4", 4]],prompt:"Select...",class:"" %>
                            </div>
                            <div class="col-4 select mb-3">
                                <%= f.label :bathroom %><br>
                                <%= f.select :bathrooms_count, [["1",1],["2",2],["3", 3],["4", 4]],prompt:"Select...",class:"" %>
                            </div>
                        </div>
                        <div class="mt-3">
                            <%= f.submit "submit",class: "btn btn-info w-25 savabtn" %>
                        </div>
                    <% end %>
                </div>
            </div><%#card end%>            
        </div><%#col-9 end%>
    </div>
</div>
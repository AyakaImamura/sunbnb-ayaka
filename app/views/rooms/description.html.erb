<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "rooms/sidebar" %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>Description</h4>
                </div>
                <div class="card-body">
                    
                    <%= form_for @room do |f| %>    
                        <%= f.label :listing_name %><br>
                        <%= f.text_field :name, placeholder:"What is your listing name?",class:"w-100 form-control" %><br>

                        <%= f.label :summary %><br>
                        <%= f.text_area :summary, placeholder:"Summary of your house",class:"w-100 form-control" %><br>

                        <%= f.submit "submit",class: "btn btn-info w-25 savabtn" %>
                    <% end %>

                </div>
            </div><%#card end%>            
        </div><%#col-9 end%>
    </div>
</div>